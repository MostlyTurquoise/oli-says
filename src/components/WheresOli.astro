---
let { imgsrc, left, top, ...other } = Astro.props;
---

<div {...other} id="wheres-oli" style={`left:${left}; top:${top};`}>
    <div id="hover-area"></div>
    <img src={imgsrc} />
</div>
<style>
    div#wheres-oli {
        position: absolute;
        width: 1rem;
        height: 1rem;
    }

    div#hover-area {
        width: 1ch;
        height: 1ch;
        margin: none;
    }

    div#wheres-oli > img {
        position: relative;
        width: 0rem;
        height: 0rem;
        left: 0rem;
        top: 0rem;
        transition:
            width 0.2s,
            height 0.2s,
            left 0.2s,
            top 0.2s;
        animation: 0.1s ease-in-out 0s infinite alternate spin;
    }

    div#wheres-oli:hover > img {
        display: block;
        left: -2.5rem;
        top: -2.5rem;
        width: 5rem;
        height: 5rem;
    }

    @keyframes spin {
        from {
            rotate: -10deg;
        }
        to {
            rotate: 10deg;
        }
    }
</style>
