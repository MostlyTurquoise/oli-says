---
import WheresOli from "./WheresOli.astro"
import olii from "../assets/olii.webp"
---

<div id="container">
	<img id="oligen" src="">
	<div id="whathesays"></div>
	<button id="redir">Make your own</button>
</div>

<script>
	let canvas = new OffscreenCanvas(1, 1);
	canvas.width = document.getElementById("whathesays")!.clientWidth;
	canvas.height = document.getElementById("whathesays")!.clientWidth;
	let ctx = canvas.getContext("2d")!;
	let base_image = new Image();
	base_image.src = "/olii-bubble.webp";
	base_image.onload = function () {
		gen_img(decodeURIComponent(window.location.pathname.substring(1)));
	};
	let modr = canvas.width / 200;
	let out = document.getElementById("oligen") as HTMLImageElement;

	async function gen_img(text: string) {
		ctx.fillStyle = "olivedrab";
		ctx.fillRect(0, 0, canvas.width, canvas.height);
		ctx.drawImage(base_image, 0, 0, canvas.width, canvas.height);
		ctx.font = "3rem serif";
		ctx.fillStyle = "black";
		ctx.fillText(text, 25 * modr, 75 * modr, 100 * modr);
		let rdr = new FileReader()
		rdr.addEventListener("load",(e)=>{
			out.src = rdr.result!.toString()
		})
		rdr.readAsDataURL(await canvas.convertToBlob())
	}

	let redir = document.getElementById("redir") as HTMLButtonElement;
	redir.addEventListener("click", async (e) => {
		location.href = "/"
	});
</script>
<style>
	div#container {
		display: flex;
		width: 100vw;
		flex-direction: column;
		align-items: center;
	}

	canvas {
		margin: 0.3rem;
	}

	button {
		background-color: olivedrab;
		border-color: white;
		border-width: 0.3rem;
		border-style: solid;
		margin: 0.3rem;
		font-size: 1.5rem;
		color: white;
		height: 2.5rem;
	}

	button:hover {
		background-color: white;
		color: darkolivegreen;
	}

	div#whathesays {
		width: min(30rem, 90vw);
		height:0px;
	}
</style>
